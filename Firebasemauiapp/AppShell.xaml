<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Firebasemauiapp.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:Firebasemauiapp.Pages"
    xmlns:main="clr-namespace:Firebasemauiapp.Mainpages"
    xmlns:community="clr-namespace:Firebasemauiapp.CommunityPage"
    xmlns:store="clr-namespace:Firebasemauiapp.StorePage"
    xmlns:quest="clr-namespace:Firebasemauiapp.QuestPage"
    Title="Firebasemauiapp"
    FlyoutBehavior="Disabled">

    <Shell.Resources>
        <Style TargetType="ShellContent">
            <Setter Property="Shell.TabBarIsVisible"
                    Value="False"/>
        </Style>
    </Shell.Resources>

    <!-- Authentication Pages (No Tabs) -->
    <ShellContent
        x:Name="signin"
        Title="Sign In"
        ContentTemplate="{DataTemplate pages:SignInView}"
        Route="signin"/>
    <ShellContent
        Title="Sign Up"
        ContentTemplate="{DataTemplate pages:SignUpView}"
        Route="signup"/>
    <ShellContent
        Title="Terms of Service"
        ContentTemplate="{DataTemplate pages:TermPage}"
        Route="termpage"/>
    <ShellContent
        Title="Summary"
        ContentTemplate="{DataTemplate main:SummaryView}"
        Route="summary"/>

    <!-- Mock page for Summary layout -->
    <ShellContent
        Title="Summary Mock"
        ContentTemplate="{DataTemplate main:SummaryMockView}"
        Route="summarymock"/>

    <!-- Main Pages (No TabBar) -->

    <!-- Starter/Home Page -->
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate main:StarterView}"
        Route="starter"/>

    <!-- Quest Page -->
    <ShellContent
        Title="Quest"
        ContentTemplate="{DataTemplate quest:QuestPage}"
        Route="quest"/>

    <!-- Diary Page -->
    <ShellContent
        Title="Diary"
        ContentTemplate="{DataTemplate main:SelectMoodPage}"
        Route="diary"/>

    <!-- Community Page -->
    <ShellContent
        Title="Community"
        ContentTemplate="{DataTemplate community:CommunityPage}"
        Route="community"/>

    <!-- Store Page -->
    <ShellContent
        Title="Store"
        ContentTemplate="{DataTemplate store:StorePage}"
        Route="store"/>

    <!-- Dashboard Page -->
    <ShellContent
        Title="Dashboard"
        ContentTemplate="{DataTemplate main:Dashboard}"
        Route="dashboard"/>

    <!-- Diary History Page -->
    <ShellContent
        Title="Diary History"
        ContentTemplate="{DataTemplate main:DiaryHistory}"
        Route="history"/>

    <!-- History Detail Page -->
    <ShellContent
        Title="Memory Detail"
        ContentTemplate="{DataTemplate main:HistoryDetailPage}"
        Route="historydetail"/>


</Shell>
