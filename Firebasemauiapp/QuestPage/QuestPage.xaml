<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Firebasemauiapp.Converters"
             x:Class="Firebasemauiapp.QuestPage.QuestPage"
             x:Name="Root"
             Title="Quests and Challenge"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#FFF9F1">
    <ContentPage.Resources>
        <converters:ProgressToDoubleConverter x:Key="ProgressToDoubleConverter" />
    </ContentPage.Resources>
    <ScrollView>
        <VerticalStackLayout Spacing="16" Padding="0,0,0,16">
            <!-- Hero Header -->
            <Grid HeightRequest="140" BackgroundColor="#4CAF50">
                <Label Text="Quests and Challenge" FontAttributes="Bold" FontSize="22" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>

            <VerticalStackLayout Padding="16" Spacing="16">
                <!-- Daily Check-in -->
                <Border BackgroundColor="#FFFFFF" StrokeThickness="0" Padding="12">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12" />
                    </Border.StrokeShape>
                    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto">
                        <Label Grid.Row="0" Grid.Column="0" Text="Daily Check In" FontAttributes="Bold"/>
                        <Label Grid.Row="0" Grid.Column="1" Text="12:12:20" FontSize="12" TextColor="#666"/>
                        <HorizontalStackLayout Grid.Row="1" Grid.ColumnSpan="2" Spacing="8" Margin="0,8,0,0">
                            <Border Padding="8" BackgroundColor="#E8F5E9" StrokeThickness="1">
                                <Border.StrokeShape><RoundRectangle CornerRadius="8"/></Border.StrokeShape>
                                <Label Text="day 1 ðŸª™" FontSize="12"/>
                            </Border>
                            <Label Text=">" VerticalOptions="Center"/>
                            <Border Padding="8" BackgroundColor="#E8F5E9" StrokeThickness="1">
                                <Border.StrokeShape><RoundRectangle CornerRadius="8"/></Border.StrokeShape>
                                <Label Text="day 2 ðŸª™" FontSize="12"/>
                            </Border>
                            <Label Text=">" VerticalOptions="Center"/>
                            <Border Padding="8" BackgroundColor="#E8F5E9" StrokeThickness="1">
                                <Border.StrokeShape><RoundRectangle CornerRadius="8"/></Border.StrokeShape>
                                <Label Text="day 3 ðŸª™" FontSize="12"/>
                            </Border>
                            <Label Text=">" VerticalOptions="Center"/>
                            <Border Padding="8" BackgroundColor="#E8F5E9" StrokeThickness="1">
                                <Border.StrokeShape><RoundRectangle CornerRadius="8"/></Border.StrokeShape>
                                <Label Text="day 4 ðŸª™" FontSize="12"/>
                            </Border>
                        </HorizontalStackLayout>
                    </Grid>
                </Border>

                <!-- Challenges header and tabs -->
                <Label Text="Challenges" FontAttributes="Bold" FontSize="18"/>
                <Grid ColumnDefinitions="*,*">
                    <Button Text="Self-Quests" BackgroundColor="#4CAF50" TextColor="White"/>
                    <Button Grid.Column="1" Text="Community Quests" BackgroundColor="#E0E0E0" TextColor="#333"/>
                </Grid>

                <!-- Quests list -->
                <CollectionView ItemsSource="{Binding Quests}">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Border BackgroundColor="#FFFFFF" StrokeThickness="0" Padding="12" Margin="0,0,0,8">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto">
                                    <Label Grid.Row="0" Grid.Column="0" Text="{Binding Title}" FontAttributes="Bold"/>
                                    <Border Grid.Row="0" Grid.Column="1" BackgroundColor="#FFF3E0" Padding="8,4" StrokeThickness="0">
                                        <HorizontalStackLayout Spacing="4">
                                            <Label Text="{Binding Reward}" />
                                            <Label Text="ðŸª™" />
                                        </HorizontalStackLayout>
                                    </Border>
                                    <Label Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding Type}" FontSize="12" TextColor="#666"/>
                                    <Grid Grid.Row="2" Grid.ColumnSpan="2" ColumnDefinitions="*,Auto" VerticalOptions="Center">
                                        <ProgressBar Grid.Column="0" HeightRequest="8" Progress="{Binding Progress, Converter={StaticResource ProgressToDoubleConverter}}"/>
                                        <Button Grid.Column="1" Text="Claim" Margin="8,0,0,0" IsEnabled="{Binding CanClaim}" Command="{Binding Source={x:Reference Root}, Path=BindingContext.ClaimCommand}" CommandParameter="{Binding .}"/>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>