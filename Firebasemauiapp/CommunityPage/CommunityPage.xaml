<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Firebasemauiapp.CommunityPage"
             x:Class="Firebasemauiapp.CommunityPage.CommunityPage"
             Shell.NavBarIsVisible="False"
             Title="CommunityPage">
    <!-- Background image layer + content -->
    <Grid RowDefinitions="*">
        <Image Source="commu_treebg.png"
               Aspect="AspectFill"
               Opacity="1"/>

        <!-- Back Button -->
        <ImageButton Source="back.png"
                     WidthRequest="32"
                     HeightRequest="32"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     Margin="20,50,0,0"
                     Clicked="OnBackClicked"
                     ZIndex="100"/>

        <!-- Main Content -->
        <VerticalStackLayout HorizontalOptions="Center"
                             VerticalOptions="Start"
                             Margin="40,80,40,0"
                             Spacing="10">

            <!-- Title -->
            <Label Text="Echoes of &#10; Kindness"
                   FontSize="36"
                   FontAttributes="Bold"
                   TextColor="#2F6B4F"
                   HorizontalTextAlignment="Start"/>

            <!-- Subtitle -->
            <Label Text="A safe space to rest and grow."
                   FontSize="16"
                   TextColor="#2F6B4F"
                   HorizontalTextAlignment="Start"
                   Margin="0,0,0,20"/>
        </VerticalStackLayout>

        <!-- Buttons at bottom -->
        <HorizontalStackLayout HorizontalOptions="Center"
                               VerticalOptions="End"
                               Margin="0,0,0,120"
                               Spacing="15">

            <!-- Feel Loved Button -->
            <Button Text="Feel Loved"
                    TextTransform="None"
                    BackgroundColor="#8FB78F"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="20"
                    WidthRequest="180"
                    HeightRequest="60">
                <Button.Shadow>
                    <Shadow Brush="#40000000"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Button.Shadow>
            </Button>

            <!-- Share Love Button -->
            <Button Text="Share Love"
                    TextTransform="None"
                    BackgroundColor="#FEAA3A"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="20"
                    WidthRequest="180"
                    HeightRequest="60"
                    Clicked="OnShareLoveClicked">
                <Button.Shadow>
                    <Shadow Brush="#40000000"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Button.Shadow>
            </Button>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>