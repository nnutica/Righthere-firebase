<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Firebasemauiapp.CommunityPage"
             x:Class="Firebasemauiapp.CommunityPage.CommunityPage"
             Shell.NavBarIsVisible="False"
             Title="CommunityPage">
    <Grid>
        <!-- Background image layer -->
        <Image Source="commu_treebg.png"
               Aspect="AspectFill"
               Opacity="1"
               Grid.RowSpan="3"
                Grid.ColumnSpan="3"/>

        <!-- Back Button -->
        <ImageButton Source="back_green.png"
                     WidthRequest="32"
                     HeightRequest="32"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     Margin="20,50,0,0"
                     Clicked="OnBackClicked"
                     ZIndex="100"
                     Grid.Row="0"
                Grid.Column="0"/>

        <!-- Main Content Grid -->
        <Grid RowDefinitions="Auto,*,Auto"
                ColumnDefinitions="*,*"
                Padding="30,80,30,30"
                Grid.RowSpan="3"
                Grid.ColumnSpan="3">
            <!-- Title and Subtitle -->
            <StackLayout Grid.Row="0"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Spacing="5">
                <Label Text="Echoes of&#10;Kindness"
                       FontSize="52"
                       FontAttributes="Bold"
                       TextColor="#2F6B4F"
                       HorizontalTextAlignment="Start"/>
                <Label Text="A safe space to rest and grow."
                       FontSize="16"
                       TextColor="#2F6B4F"
                       FontFamily="lightfont"
                       HorizontalTextAlignment="Start"
                       Margin="0,5,0,0"/>
            </StackLayout>

            <!-- Buttons at bottom -->
            <StackLayout Grid.Row="2"
                    Grid.Column="0"
                    Grid.ColumnSpan="2"
                    Orientation="Horizontal"
                    HorizontalOptions="Center"
                    Spacing="15">
                <Button Text="Feel Loved"
                        TextTransform="None"
                        BackgroundColor="#8FB78F"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="20"
                        WidthRequest="180"
                        HeightRequest="60"
                        Clicked="OnFeelLovedClicked">
                    <Button.Shadow>
                        <Shadow Brush="#40000000"
                                Offset="0,4"
                                Radius="8"
                                Opacity="0.5"/>
                    </Button.Shadow>
                </Button>
                <Button Text="Share Love"
                        TextTransform="None"
                        BackgroundColor="#FEAA3A"
                        TextColor="White"
                        FontSize="18"
                        CornerRadius="20"
                        WidthRequest="180"
                        HeightRequest="60"
                        Clicked="OnShareLoveClicked">
                    <Button.Shadow>
                        <Shadow Brush="#40000000"
                                Offset="0,4"
                                Radius="8"
                                Opacity="0.5"/>
                    </Button.Shadow>
                </Button>
            </StackLayout>
        </Grid>

        <!-- Post-it Popup Overlay -->
        <Grid IsVisible="{Binding IsPostOverlayVisible}"
              BackgroundColor="#80000000"
              ZIndex="200"
              Grid.RowSpan="3"
                Grid.ColumnSpan="3">
            <!-- Post-it Card -->
            <Border BackgroundColor="Transparent"
                    StrokeThickness="0"
                    WidthRequest="300"
                    HeightRequest="380"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="0"
                    Shadow="0,8,16,#40000000">
                <Grid RowDefinitions="50,*,Auto">
                    <Image Grid.RowSpan="3"
                           Source="{Binding RandomPost.PostItColor}"
                           Aspect="Fill"/>
                    <ImageButton Grid.Row="0"
                                 Source="close.png"
                                 WidthRequest="32"
                                 HeightRequest="32"
                                 BackgroundColor="White"
                                 CornerRadius="16"
                                 HorizontalOptions="End"
                                 VerticalOptions="Start"
                                 Margin="0,10,10,0"
                                 Command="{Binding ClosePostOverlayCommand}"/>
                    <VerticalStackLayout Grid.Row="1"
                                         Padding="35,0,35,0"
                                         Spacing="0"
                                         VerticalOptions="Center"
                                         Margin="0,0,0,60">
                        <Label Text="{Binding RandomPost.Content}"
                               TextColor="{Binding RandomPost.TextColor}"
                               FontSize="16"
                               FontAttributes="Italic"
                               FontFamily="lightfont"
                               HorizontalTextAlignment="Start"
                               VerticalTextAlignment="Center"
                               LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>
            <!-- Navigation Arrows -->
            <Grid ColumnDefinitions="*,*"
                  HorizontalOptions="Fill"
                  VerticalOptions="Center"
                  Padding="20,0">
                <ImageButton Source="left_arrow.png"
                             WidthRequest="36"
                             HeightRequest="36"
                             BackgroundColor="Transparent"
                             Clicked="OnPreviousPostClicked"
                             Grid.Column="0"
                             HorizontalOptions="Start"/>
                <ImageButton Source="right_arrow.png"
                             WidthRequest="36"
                             HeightRequest="36"
                             BackgroundColor="Transparent"
                             Clicked="OnNextPostClicked"
                             Grid.Column="1"
                             HorizontalOptions="End"/>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>