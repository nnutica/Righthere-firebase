<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Firebasemauiapp.CommunityPage"
             x:Class="Firebasemauiapp.CommunityPage.CommunityPage"
             Shell.NavBarIsVisible="False"
             Title="CommunityPage">
    <!-- Background image layer + content -->
    <Grid RowDefinitions="*">
        <Image Source="commu_treebg.png"
               Aspect="AspectFill"
               Opacity="1"/>

        <!-- Back Button -->
        <ImageButton Source="back_green.png"
                     WidthRequest="32"
                     HeightRequest="32"
                     HorizontalOptions="Start"
                     VerticalOptions="Start"
                     Margin="20,50,0,0"
                     Clicked="OnBackClicked"
                     ZIndex="100"/>

        <!-- Main Content -->
        <VerticalStackLayout HorizontalOptions="Start"
                             VerticalOptions="Start"
                             Margin="45,90,40,0"
                             Spacing="5">

            <!-- Title -->
            <Label Text="Echoes of&#10;Kindness"
                   FontSize="52"
                   FontAttributes="Bold"
                   TextColor="#2F6B4F"
                   HorizontalTextAlignment="Start"/>

            <!-- Subtitle -->
            <Label Text="A safe space to rest and grow."
                   FontSize="16"
                   TextColor="#2F6B4F"
                   FontFamily="lightfont"
                   HorizontalTextAlignment="Start"
                   Margin="0,5,0,0"/>
        </VerticalStackLayout>

        <!-- Buttons at bottom -->
        <HorizontalStackLayout HorizontalOptions="Center"
                               VerticalOptions="End"
                               Margin="0,0,0,120"
                               Spacing="15">

            <!-- Feel Loved Button -->
            <Button Text="Feel Loved"
                    TextTransform="None"
                    BackgroundColor="#8FB78F"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="20"
                    WidthRequest="180"
                    HeightRequest="60"
                    Clicked="OnFeelLovedClicked">
                <Button.Shadow>
                    <Shadow Brush="#40000000"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Button.Shadow>
            </Button>

            <!-- Share Love Button -->
            <Button Text="Share Love"
                    TextTransform="None"
                    BackgroundColor="#FEAA3A"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="20"
                    WidthRequest="180"
                    HeightRequest="60"
                    Clicked="OnShareLoveClicked">
                <Button.Shadow>
                    <Shadow Brush="#40000000"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Button.Shadow>
            </Button>
        </HorizontalStackLayout>

        <!-- Post-it Popup Overlay -->
        <Grid IsVisible="{Binding IsPostOverlayVisible}"
              BackgroundColor="#80000000"
              ZIndex="200">

            <!-- Post-it Card -->
            <Border BackgroundColor="Transparent"
                    StrokeThickness="0"
                    WidthRequest="300"
                    HeightRequest="380"
                    HorizontalOptions="Center"
                    VerticalOptions="Center"
                    Padding="0"
                    Shadow="0,8,16,#40000000">

                <Grid RowDefinitions="50,*,Auto">
                    <!-- Post-it Background Image -->
                    <Image Grid.RowSpan="3"
                           Source="{Binding RandomPost.PostItColor}"
                           Aspect="Fill"/>



                    <!-- Close Button -->
                    <ImageButton Grid.Row="0"
                                 Source="close.png"
                                 WidthRequest="32"
                                 HeightRequest="32"
                                 BackgroundColor="White"
                                 CornerRadius="16"
                                 HorizontalOptions="End"
                                 VerticalOptions="Start"
                                 Margin="0,10,10,0"
                                 Command="{Binding ClosePostOverlayCommand}"/>

                    <!-- Content Area -->
                    <VerticalStackLayout Grid.Row="1"
                                         Padding="35,0,35,0"
                                         Spacing="0"
                                         VerticalOptions="Center"
                                         Margin="0,0,0,60">
                        <Label Text="{Binding RandomPost.Content}"
                               TextColor="{Binding RandomPost.TextColor}"
                               FontSize="16"
                               FontAttributes="Italic"
                               FontFamily="lightfont"
                               HorizontalTextAlignment="Start"
                               VerticalTextAlignment="Center"
                               LineBreakMode="WordWrap"/>
                    </VerticalStackLayout>
                </Grid>
            </Border>

            <!-- Navigation Arrows - Separate layer -->
            <Grid ColumnDefinitions="*,*"
                  HorizontalOptions="Fill"
                  VerticalOptions="Center"
                  Padding="20,0">
                <!-- Left Arrow -->
                <ImageButton Source="left_arrow.png"
                             WidthRequest="36"
                             HeightRequest="36"
                             BackgroundColor="Transparent"
                             Clicked="OnPreviousPostClicked"
                             Grid.Column="0"
                             HorizontalOptions="Start"/>

                <!-- Right Arrow -->
                <ImageButton Source="right_arrow.png"
                             WidthRequest="36"
                             HeightRequest="36"
                             BackgroundColor="Transparent"
                             Clicked="OnNextPostClicked"
                             Grid.Column="1"
                             HorizontalOptions="End"/>
            </Grid>
        </Grid>
    </Grid>
</ContentPage>