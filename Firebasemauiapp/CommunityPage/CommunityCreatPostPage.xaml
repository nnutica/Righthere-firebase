<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Firebasemauiapp.CommunityPage"
             x:Class="Firebasemauiapp.CommunityPage.CommunityCreatPostPage"
             Shell.NavBarIsVisible="False"
             Title="Share My Love">

    <ScrollView>
        <Grid RowDefinitions="Auto,Auto,*,Auto"
              Padding="20"
              RowSpacing="20">

            <!-- Back Button -->
            <ImageButton Source="back_green.png"
                         WidthRequest="20"
                         HeightRequest="20"
                         HorizontalOptions="Start"
                         VerticalOptions="Start"
                         Command="{Binding GoBackCommand}"
                         Grid.Row="0"/>

            <!-- Header -->
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="5"
                                 Margin="0,20,0,0">
                <Label Text="Share"
                       FontSize="40"
                       FontAttributes="Bold"
                       TextColor="#8FB78F"
                       HorizontalTextAlignment="Start"/>
                <Label Text="My Love"
                       FontSize="40"
                       FontAttributes="Bold"
                       TextColor="#8FB78F"
                       HorizontalTextAlignment="Start"
                       Margin="0,-15,0,0"/>
            </VerticalStackLayout>

            <!-- Color Selection & Post-it Preview -->
            <VerticalStackLayout Grid.Row="2"
                                 Spacing="20"
                                 Margin="0,20,0,0">

                <!-- Select color label -->
                <Label Text="Select color:"
                       FontSize="16"
                       TextColor="#F4A259"
                       FontAttributes="Bold"/>

                <!-- Color circles -->
                <HorizontalStackLayout Spacing="15">
                    <CollectionView ItemsSource="{Binding AvailableColors}"
                                    SelectionMode="None">
                        <CollectionView.ItemsLayout>
                            <LinearItemsLayout Orientation="Horizontal"
                                               ItemSpacing="15"/>
                        </CollectionView.ItemsLayout>
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Button BackgroundColor="{Binding CircleColor}"
                                        CornerRadius="25"
                                        WidthRequest="50"
                                        HeightRequest="50"
                                        BorderWidth="0"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:CreatePostViewModel}}, Path=SelectColorCommand}"
                                        CommandParameter="{Binding}"/>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </HorizontalStackLayout>

                <!-- Post-it Preview with Editor -->
                <Grid WidthRequest="340"
                      HeightRequest="340"
                      HorizontalOptions="Center"
                      Margin="0,20,0,0">

                    <!-- Post-it background image (with tape included) -->
                    <Image Source="{Binding SelectedColor.PostItImage}"
                           Aspect="AspectFill"
                           WidthRequest="340"
                           HeightRequest="340"
                           HorizontalOptions="Center"
                           VerticalOptions="Center"/>

                    <!-- Editor for content (no underline) -->
                    <Border BackgroundColor="Transparent"
                            StrokeThickness="0"
                            Margin="30,45,30,40">
                        <Editor Text="{Binding PostContent}"
                                Placeholder="Hey, look how far you've come. I'm proud of you."
                                PlaceholderColor="{Binding SelectedColor.TextColor}"
                                TextColor="{Binding SelectedColor.TextColor}"
                                FontSize="16"
                                FontAttributes="Italic"
                                BackgroundColor="Transparent"
                                VerticalOptions="Fill"
                                HorizontalOptions="Fill"
                                AutoSize="TextChanges"
                                MaxLength="250"/>
                    </Border>
                </Grid>
            </VerticalStackLayout>

            <!-- Share Button -->
            <Button Text="Share My Love"
                    TextTransform="None"
                    BackgroundColor="#F4A259"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="25"
                    HeightRequest="50"
                    HorizontalOptions="Fill"
                    Command="{Binding SharePostCommand}"
                    Grid.Row="3"
                    Margin="0,10,0,20">
                <Button.Shadow>
                    <Shadow Brush="#40000000"
                            Offset="0,4"
                            Radius="8"
                            Opacity="0.5"/>
                </Button.Shadow>
            </Button>

        </Grid>
    </ScrollView>
</ContentPage>