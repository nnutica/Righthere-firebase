<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
               xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
               xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
               x:Class="Firebasemauiapp.CommunityPage.CommunityCreatePost"
               x:Name="CreatePostPopup">

    <Border BackgroundColor="White"
            Stroke="#50A65D"
            StrokeThickness="2"
            Padding="20"
            WidthRequest="360"
            HeightRequest="400">
        <Border.StrokeShape>
            <RoundRectangle CornerRadius="18"/>
        </Border.StrokeShape>

        <Grid RowDefinitions="Auto,*,Auto"
              RowSpacing="16">

            <!-- Header -->
            <Grid Grid.Row="0"
                  ColumnDefinitions="*,Auto">
                <Label Grid.Column="0"
                       Text="Create New Post"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="#2E7D32"/>
                <Button Grid.Column="1"
                        Text="âœ•"
                        FontSize="16"
                        BackgroundColor="Transparent"
                        TextColor="#777"
                        Clicked="OnCloseClicked"
                        WidthRequest="34"
                        HeightRequest="34"/>
            </Grid>

            <!-- Content Input -->
            <Border Grid.Row="1"
                    BackgroundColor="#F5F9F6"
                    Padding="16"
                    Stroke="#B2DFDB"
                    StrokeThickness="1">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="12"/>
                </Border.StrokeShape>
                <VerticalStackLayout Spacing="8">
                    <Label x:Name="UserLabel"
                           Text="Posting as: Guest"
                           FontSize="13"
                           TextColor="#2E7D32"/>
                    <Label Text="What's on your mind?"
                           FontSize="14"
                           TextColor="#555"/>
                    <Editor x:Name="PostContentEditor"
                            AutoSize="TextChanges"
                            Placeholder="Share your thoughts with the community..."
                            BackgroundColor="White"
                            MinimumHeightRequest="120"
                            MaximumHeightRequest="200"
                            TextColor="Black"/>
                </VerticalStackLayout>
            </Border>

            <!-- Action Buttons -->
            <Grid Grid.Row="2"
                  ColumnDefinitions="*,*"
                  ColumnSpacing="12">
                <Button Grid.Column="0"
                        Text="Cancel"
                        BackgroundColor="#ECEFF1"
                        TextColor="#666"
                        CornerRadius="10"
                        HeightRequest="45"
                        Clicked="OnCancelClicked"/>
                <Button Grid.Column="1"
                        Text="Post"
                        BackgroundColor="#2E7D32"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="45"
                        Clicked="OnPostClicked"/>
            </Grid>
        </Grid>
    </Border>
</toolkit:Popup>
