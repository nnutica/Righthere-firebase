<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Pages.TermPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="Terms of Service"
    Shell.NavBarIsVisible="False"
    BackgroundColor="White"
    Padding="0"
    >

    <Grid RowDefinitions="Auto,Auto,*,Auto"
          RowSpacing="0"
          Padding="0"
          Margin="0">

        <!-- ===== Row 0: Icon + Title ===== -->
        <VerticalStackLayout Grid.Row="0"
                            Padding="20,16,20,16"
                            Spacing="12"
                            HorizontalOptions="Center">
            <Image Source="termandcon.png"
                   WidthRequest="60"
                   HeightRequest="60"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"/>
            
            <HorizontalStackLayout HorizontalOptions="Center"
                                  Spacing="8"
                                  VerticalOptions="Center">
                <BoxView WidthRequest="40"
                        HeightRequest="1"
                        Color="#8FB78F"
                        VerticalOptions="Center"/>
                <Label Text="TERMS OF SERVICE"
                       FontFamily="contextfont"
                       FontSize="18"
                       TextColor="#8FB78F"
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <BoxView WidthRequest="40"
                        HeightRequest="1"
                        Color="#8FB78F"
                        VerticalOptions="Center"/>
            </HorizontalStackLayout>
        </VerticalStackLayout>

        <!-- ===== Row 1: Fixed Disclaimer ===== -->
        <VerticalStackLayout Grid.Row="1"
                            Padding="20,16,20,16"
                            Spacing="8"
                            BackgroundColor="White">
            <Label Text="IMPORTANT NOTICE: MEDICAL DISCLAIMER"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"
                   LineBreakMode="WordWrap"/>
            <Label Text="THE 'RIGHT HERE' APPLICATION IS NOT A MEDICAL DEVICE AND DOES NOT PROVIDE MEDICAL ADVICE, DIAGNOSIS, OR TREATMENT. THE AI-BASED ANALYSIS IS FOR INFORMATIONAL AND SELF-CARE PURPOSES ONLY. IF YOU ARE EXPERIENCING A MENTAL HEALTH CRISIS OR SUICIDAL THOUGHTS, PLEASE CONTACT A DOCTOR OR EMERGENCY SERVICES IMMEDIATELY."
                   FontSize="14"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
            
            <BoxView HeightRequest="1"
                    Color="#8FB78F"
                    Margin="0,8,0,0"/>
        </VerticalStackLayout>

        <!-- ===== Row 2: Scrollable Content ===== -->
<ScrollView Grid.Row="2"
           Padding="0">
    <VerticalStackLayout Padding="20,16,20,16"
                        Spacing="12">

        <!-- 1. Acceptance of Terms -->
        <VerticalStackLayout Spacing="8">
            <Label Text="1. ACCEPTANCE OF TERMS"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"/>

            <Label Text="By checking the box &quot;I agree to the Terms of Service and Privacy Policy&quot; and accessing or using the &quot;Right Here&quot; application (&quot;App&quot;), you agree to be bound by these Terms. If you do not agree, please do not use the App."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>

        <!-- 2. Eligibility and Parental Consent -->
        <VerticalStackLayout Spacing="8">
            <Label Text="2. ELIGIBILITY AND PARENTAL CONSENT"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"/>

            <Label Text="● 2.1 Age Requirement: You must be at least 13 years old to use this App."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="● 2.2 Minors (Under 20): If you are under 20 years of age (or the age of majority in your jurisdiction), you represent that you have obtained your parent’s or legal guardian’s permission to use the App and that they have agreed to these Terms on your behalf."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>

        <!-- 3. Privacy Policy and Data Processing (PDPA) -->
        <VerticalStackLayout Spacing="8">
            <Label Text="3. PRIVACY POLICY AND DATA PROCESSING (PDPA COMPLIANT)"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"/>

            <Label Text="We value your privacy and are committed to protecting your personal data in accordance with the Personal Data Protection Act (PDPA)."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="● 3.1 Data We Collect:"
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"
                   Margin="0,4,0,0"/>

            <Label Text="○ Personal Information: Name, email address."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="○ Sensitive Data (Health &amp; Behavioral): Diary entries, mood tracking data, and mental health assessment results calculated by AI."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="● 3.2 Purpose of Processing:"
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"
                   Margin="0,4,0,0"/>

            <Label Text="○ To analyze your emotional state and provide self-care suggestions via AI."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="○ To track your mental well-being progress (Mind Tree feature)."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="○ To facilitate the Community feature."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="● 3.3 Use of AI and Third-Party Processors:"
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"
                   Margin="0,4,0,0"/>

            <Label Text="○ You acknowledge and agree that your diary content (anonymized where possible) may be processed by third-party AI services solely for the purpose of generating analysis results. We ensure these providers have adequate data protection standards."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="● 3.4 Data Retention: We retain your data only as long as necessary. You may request the deletion of your account and data at any time via the App settings."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>

        <!-- 4. User Conduct (Community Guidelines) -->
        <VerticalStackLayout Spacing="8">
            <Label Text="4. USER CONDUCT (COMMUNITY GUIDELINES)"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"/>

            <Label Text="When using the &quot;Community&quot; feature:"
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="● You agree not to post content that is harassing, abusive, defamatory, or encourages self-harm."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>

            <Label Text="● We reserve the right to remove content and suspend accounts that violate these guidelines without prior notice."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>

        <!-- 5. Intellectual Property -->
        <VerticalStackLayout Spacing="8">
            <Label Text="5. INTELLECTUAL PROPERTY"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"/>

            <Label Text="All content generated by the App (excluding your personal diary entries), including the &quot;Mind Tree&quot; design, graphics, and software code, is the property of the Developer and protected by copyright laws."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>

        <!-- 6. Limitation of Liability -->
        <VerticalStackLayout Spacing="8">
            <Label Text="6. LIMITATION OF LIABILITY"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"/>

            <Label Text="TO THE FULLEST EXTENT PERMITTED BY LAW, THE DEVELOPER SHALL NOT BE LIABLE FOR ANY INDIRECT, INCIDENTAL, OR CONSEQUENTIAL DAMAGES ARISING FROM YOUR USE OF THE APP OR RELIANCE ON THE AI ANALYSIS."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>

        <!-- 7. Governing Law -->
        <VerticalStackLayout Spacing="8">
            <Label Text="7. GOVERNING LAW"
                   FontSize="14"
                   FontFamily="contextfont"
                   FontAttributes="Bold"
                   TextColor="#8FB78F"/>

            <Label Text="These Terms shall be governed by and construed in accordance with the laws of the Kingdom of Thailand."
                   FontSize="13"
                   FontFamily="regularfont"
                   TextColor="#8FB78F"
                   LineHeight="1.5"
                   LineBreakMode="WordWrap"/>
        </VerticalStackLayout>

    </VerticalStackLayout>
</ScrollView>


        <!-- ===== Row 3: Fixed Button ===== -->
        <VerticalStackLayout Grid.Row="3"
                            Padding="20,12,20,16"
                            Spacing="0">
            <Button Text="I Acknowledge"
                    Command="{Binding CloseCommand}"
                    HeightRequest="46"
                    CornerRadius="22"
                    BackgroundColor="#FFB74D"
                    TextColor="White"
                    FontAttributes="Bold"
                    FontSize="14"/>
        </VerticalStackLayout>

    </Grid>
</ContentPage>