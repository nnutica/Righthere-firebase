<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Pages.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SignUpView"
    Shell.NavBarIsVisible="False">

    <!-- Match Sign In background style -->
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0"
                EndPoint="0,1">
            <GradientStop Offset="0"
                    Color="#E4F3E8"/>
            <GradientStop Offset="0.6"
                    Color="#E4F3E8"/>
            <GradientStop Offset="0.6"
                    Color="#FFFFFF"/>
            <GradientStop Offset="1"
                    Color="#FFFFFF"/>
        </LinearGradientBrush>
    </ContentPage.Background>

    <Grid RowDefinitions="2*,3*"
            Padding="0">
        <!-- Top illustration placeholder -->
        <Grid Grid.Row="0"
              Padding="20"
              VerticalOptions="FillAndExpand">
            <Border BackgroundColor="Transparent"
                    StrokeThickness="0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center">
                <!-- Empty: image placeholder for later -->
            </Border>
        </Grid>

        <!-- Bottom card -->
        <Grid Grid.Row="1"
                Padding="0,0,0,10">
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 40,40,0,0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
                <ScrollView>
                    <VerticalStackLayout Padding="24,32,24,16"
                            Spacing="16">
                        <Label Text="Sign Up"
                               FontAttributes="Bold"
                               FontSize="24"
                               TextColor="#4A5F52"/>

                        <Label Text="Create an account to unlock a safe space for your feelings and memories"
                               FontSize="14"
                               TextColor="#555555"/>

                        <!-- Email -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Email"
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="48">
                                <Entry Placeholder="Enter your email"
                                       Text="{Binding Email}"
                                       FontSize="14"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Username -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Username"
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="48">
                                <Entry Placeholder="Choose a username"
                                       Text="{Binding Username}"
                                       FontSize="14"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Password -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Password"
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="48">
                                <Entry Placeholder="Create a password"
                                       IsPassword="True"
                                       Text="{Binding Password}"
                                       FontSize="14"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Sign Up Button -->
                        <Button Text="Sign Up"
                                Command="{Binding SignUpCommand}"
                                HeightRequest="48"
                                CornerRadius="24"
                                BackgroundColor="#FFB74D"
                                TextColor="White"
                                FontAttributes="Bold"/>

                        <!-- Bottom Sign In link -->
                        <HorizontalStackLayout HorizontalOptions="Center"
                                Margin="0,8,0,0">
                            <Label Text="Already have an account? "
                                   FontSize="13"
                                   TextColor="#8A8A8A"/>
                            <Label Text="Sign In"
                                   FontSize="13"
                                   TextColor="#50A65D"
                                   TextDecorations="Underline">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NavigateSignInCommand}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </ScrollView>
            </Border>
        </Grid>
    </Grid>
</ContentPage>