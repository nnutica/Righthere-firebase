<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Pages.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SignUpView"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#D9F8CF">

  

    <Grid RowDefinitions="3*,7*"
                    Padding="0">
                <!-- Top illustration matches Sign In: full-bleed image -->
                <Grid Grid.Row="0"
                            Padding="0"
                            VerticalOptions="Fill">
                        <Image Source="openbadge.jpg"
                                     Aspect="AspectFill"
                                     HorizontalOptions="Fill"
                                     VerticalOptions="Fill"/>
                </Grid>

        <!-- Bottom card -->
                <Grid Grid.Row="1"
                            Padding="0,0,0,10">
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 40,40,0,0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
                                <VerticalStackLayout Padding="20,24,20,12"
                                  Spacing="12"
                                  VerticalOptions="Fill">
                        <Label Text="Sign Up"
                               FontAttributes="Bold"
                               FontSize="22"
                               TextColor="#4A5F52"/>

                        <Label Text="Create an account to unlock a safe space for your feelings and memories"
                                 FontSize="12"
                                 LineBreakMode="WordWrap"
                               TextColor="#555555"/>

                        <!-- Email -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Email"
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="44">
                                <Entry Placeholder="Enter your email"
                                       Text="{Binding Email}"
                                       FontSize="13"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Username -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Username"
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="44">
                                <Entry Placeholder="Choose a username"
                                       Text="{Binding Username}"
                                       FontSize="13"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Password -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Password"
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="44">
                                <Entry Placeholder="Create a password"
                                       IsPassword="True"
                                       Text="{Binding Password}"
                                       FontSize="13"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Confirm Password -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Confirm Password"
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="44">
                                <Entry Placeholder="Confirm your password"
                                       IsPassword="True"
                                       Text="{Binding ConfirmPassword}"
                                       FontSize="13"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Terms & Privacy -->
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="8" VerticalOptions="Center">
                            <CheckBox Grid.Column="0"
                                      IsChecked="{Binding IsTermsAccepted}"
                                      VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   FontSize="11"
                                   TextColor="#4A5F52"
                                   LineBreakMode="WordWrap"
                                   VerticalOptions="Center">
                                <Label.FormattedText>
                                    <FormattedString>
                                        <Span Text="I agree to the "/>
                                        <Span Text="Terms &amp; Conditions" TextDecorations="Underline"/>
                                        <Span Text=" and "/>
                                        <Span Text="Privacy Policy" TextDecorations="Underline"/>
                                    </FormattedString>
                                </Label.FormattedText>
                            </Label>
                        </Grid>

                        <!-- Sign Up Button -->
                        <Button Text="Sign Up"
                                Command="{Binding SignUpCommand}"
                                HeightRequest="44"
                                CornerRadius="24"
                                BackgroundColor="#FFB74D"
                                TextColor="White"
                                FontAttributes="Bold"/>

                        <!-- Bottom Sign In link -->
                        <HorizontalStackLayout HorizontalOptions="Center"
                                Margin="0,8,0,0">
                            <Label Text="Already have an account? "
                                   FontSize="13"
                                   TextColor="#8A8A8A"/>
                            <Label Text="Sign In"
                                   FontSize="13"
                                   TextColor="#50A65D"
                                   TextDecorations="Underline">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NavigateSignInCommand}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
            </Border>
        </Grid>
    </Grid>
</ContentPage>