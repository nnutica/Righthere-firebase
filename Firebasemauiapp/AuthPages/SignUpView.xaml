<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Pages.SignUpView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SignUpView"
    Shell.NavBarIsVisible="False"
    BackgroundImageSource="start_bg.png">

    <Grid Padding="0">
            <!-- Woman reading illustration -->
            <Image Source="womanread.png"
                   WidthRequest="340"
                   HeightRequest="340"
                   Aspect="AspectFit"
                   HorizontalOptions="Center"
                   VerticalOptions="Start"
                   Margin="0,40,0,0"/>

        <!-- Mini logo top right with white border -->
        <Border BackgroundColor="White"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 12"
                WidthRequest="60"
                HeightRequest="60"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,-10,20,0"
                TranslationX="32"
                Padding="5">
            <Border.Shadow>
                <Shadow Opacity="0.15"
                        Radius="8"
                        Offset="0,2"/>
            </Border.Shadow>
            <Image Source="mini_logo.png"
                   Aspect="AspectFit"/>
        </Border>

        <!-- Bottom card overlapping the woman image -->
        <ScrollView VerticalOptions="EndAndExpand"
                   Padding="0,0,0,20">
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 40,40,0,0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Start"
                    Margin="0,0,0,0">
                <Border.Shadow>
                    <Shadow Opacity="0.15"
                            Radius="20"
                            Offset="0,-4"/>
                </Border.Shadow>
                <VerticalStackLayout Padding="20,24,20,20"
                                     Spacing="12"
                                     VerticalOptions="Start">
                <Label Text="Sign Up"
                       FontAttributes="Bold"
                       FontSize="22"
                       TextColor="#4A5F52"/>

                <Label Text="Create an account to unlock a safe space for your feelings and memories"
                       FontSize="12"
                       LineBreakMode="WordWrap"
                       TextColor="#555555"/>

                <!-- Email -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="Email"
                           FontSize="12"
                           TextColor="#8A8A8A"/>
                    <Border BackgroundColor="#F8F8F8"
                            Stroke="#E0E0E0"
                            StrokeShape="RoundRectangle 12"
                            HeightRequest="44">
                        <Entry Placeholder="Enter your email"
                               Text="{Binding Email}"
                               FontSize="13"
                               TextColor="#333333"
                               BackgroundColor="Transparent"
                               Margin="12,0"/>
                    </Border>
                </VerticalStackLayout>

                <!-- Username -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="Username"
                           FontSize="12"
                           TextColor="#8A8A8A"/>
                    <Border BackgroundColor="#F8F8F8"
                            Stroke="#E0E0E0"
                            StrokeShape="RoundRectangle 12"
                            HeightRequest="44">
                        <Entry Placeholder="Choose a username"
                               Text="{Binding Username}"
                               FontSize="13"
                               TextColor="#333333"
                               BackgroundColor="Transparent"
                               Margin="12,0"/>
                    </Border>
                </VerticalStackLayout>

                <!-- Password -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="Password"
                           FontSize="12"
                           TextColor="#8A8A8A"/>
                    <Border BackgroundColor="#F8F8F8"
                            Stroke="#E0E0E0"
                            StrokeShape="RoundRectangle 12"
                            HeightRequest="44">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry Grid.Column="0"
                                   Placeholder="Create a password"
                                   IsPassword="{Binding IsPasswordVisible, Converter={StaticResource InvertedBoolConverter}}"
                                   Text="{Binding Password}"
                                   FontSize="13"
                                   TextColor="#333333"
                                   BackgroundColor="Transparent"
                                   Margin="12,0,0,0"/>
                            <Image Grid.Column="1"
                                   Source="eye_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   Margin="0,0,12,0"
                                   VerticalOptions="Center">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding TogglePasswordVisibilityCommand}"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Confirm Password -->
                <VerticalStackLayout Spacing="4">
                    <Label Text="Confirm Password"
                           FontSize="12"
                           TextColor="#8A8A8A"/>
                    <Border BackgroundColor="#F8F8F8"
                            Stroke="#E0E0E0"
                            StrokeShape="RoundRectangle 12"
                            HeightRequest="44">
                        <Grid ColumnDefinitions="*,Auto">
                            <Entry Grid.Column="0"
                                   Placeholder="Confirm your password"
                                   IsPassword="{Binding IsConfirmPasswordVisible, Converter={StaticResource InvertedBoolConverter}}"
                                   Text="{Binding ConfirmPassword}"
                                   FontSize="13"
                                   TextColor="#333333"
                                   BackgroundColor="Transparent"
                                   Margin="12,0,0,0"/>
                            <Image Grid.Column="1"
                                   Source="eye_icon.png"
                                   WidthRequest="20"
                                   HeightRequest="20"
                                   Margin="0,0,12,0"
                                   VerticalOptions="Center">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding ToggleConfirmPasswordVisibilityCommand}"/>
                                </Image.GestureRecognizers>
                            </Image>
                        </Grid>
                    </Border>
                </VerticalStackLayout>

                <!-- Terms & Privacy -->
                <Grid ColumnDefinitions="Auto,*"
                      ColumnSpacing="8"
                      VerticalOptions="Center">
                    <CheckBox Grid.Column="0"
                              IsChecked="{Binding IsTermsAccepted}"
                              VerticalOptions="Center"/>
                    <Label Grid.Column="1"
                           FontSize="11"
                           TextColor="#4A5F52"
                           LineBreakMode="WordWrap"
                           VerticalOptions="Center">
                        <Label.FormattedText>
                            <FormattedString>
                                <Span Text="I agree to the "/>
                                <Span Text="Terms &amp; Conditions"
                                      TextDecorations="Underline"/>
                                <Span Text=" and "/>
                                <Span Text="Privacy Policy"
                                      TextDecorations="Underline"/>
                            </FormattedString>
                        </Label.FormattedText>
                    </Label>
                </Grid>

                <!-- Sign Up Button -->
                <Button Text="Sign Up"
                        Command="{Binding SignUpCommand}"
                        HeightRequest="44"
                        CornerRadius="24"
                        BackgroundColor="#FFB74D"
                        TextColor="White"
                        FontAttributes="Bold"/>

                <!-- Google Sign Up Button -->
                <Border BackgroundColor="#FFFFFF"
                        Stroke="#E0E0E0"
                        StrokeShape="RoundRectangle 24"
                        HeightRequest="44">
                    <Grid Padding="16,0"
                          ColumnDefinitions="Auto,*">
                        <!-- Google Icon -->
                        <Image Source="google.png"
                               WidthRequest="24"
                               HeightRequest="24"
                               Aspect="AspectFit"
                               VerticalOptions="Center"
                               Margin="0,0,12,0"/>
                        <Button Grid.Column="1"
                                Text="Sign up with Google"
                                BackgroundColor="Transparent"
                                TextColor="#5F6368"
                                FontSize="13"
                                Command="{Binding SignUpWithGoogleCommand}"/>
                    </Grid>
                </Border>

                <!-- Bottom Sign In link -->
                <HorizontalStackLayout HorizontalOptions="Center"
                                       Margin="0,8,0,0">
                    <Label Text="Already have an account? "
                           FontSize="13"
                           TextColor="#8A8A8A"/>
                    <Label Text="Sign In"
                           FontSize="13"
                           TextColor="#FFB74D"
                           TextDecorations="Underline">
                        <Label.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding NavigateSignInCommand}"/>
                        </Label.GestureRecognizers>
                    </Label>
                </HorizontalStackLayout>
            </VerticalStackLayout>
            </Border>
        </ScrollView>
    </Grid>

</ContentPage>