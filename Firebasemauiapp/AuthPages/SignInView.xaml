<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Pages.SignInView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SignInView"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#8FB78F">

    <Grid RowDefinitions="*,*"
          RowSpacing="0"
          Padding="0">
        <!-- Top illustration placeholder -->
        <Grid Grid.Row="0"
              Padding="20,20,20,0"
              VerticalOptions="FillAndExpand">
            <Border BackgroundColor="Transparent"
                    StrokeThickness="0"
                    HorizontalOptions="Fill"
                    VerticalOptions="FillAndExpand">
                <!-- เอารูปมาใส่ตรงนี้ -->
                <Image Source="openbadge.jpg"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"
                       VerticalOptions="FillAndExpand"/>
            </Border>
        </Grid>

        <!-- Bottom card -->
        <Grid Grid.Row="1"
              Padding="0,0,0,10">
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    StrokeShape="RoundRectangle 40,40,0,0"
                    HorizontalOptions="Fill"
                    VerticalOptions="Fill">
                <Grid>
                    <VerticalStackLayout Padding="20,20,20,12"
                                         Spacing="12">
                        <!-- Title -->
                        <Label Text="Sign In"
                               FontAttributes="Bold"
                               FontSize="22"
                               TextColor="#8FB78F"/>

                        <!-- Username -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Username"
                                   FontSize="12"
                                   TextColor="#8FB78F"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="44">
                                <Entry Placeholder="Enter your username"
                                       Text="{Binding Email}"
                                       FontSize="13"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                        </VerticalStackLayout>

                        <!-- Password -->
                        <VerticalStackLayout Spacing="4">
                            <Label Text="Password"
                                   FontSize="12"
                                   TextColor="#8FB78F"/>
                            <Border BackgroundColor="#F8F8F8"
                                    Stroke="#E0E0E0"
                                    StrokeShape="RoundRectangle 12"
                                    HeightRequest="44">
                                <Entry Placeholder="Enter your password"
                                       IsPassword="True"
                                       Text="{Binding Password}"
                                       FontSize="13"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0"/>
                            </Border>
                            <Label Text="Forgot password?"
                                   FontSize="10"
                                   TextColor="#8A8A8A"
                                   HorizontalOptions="End"
                                   Margin="0,2,4,0"/>
                        </VerticalStackLayout>

                        <!-- Error Message -->
                        <Label FontSize="11"
                               TextColor="Red"
                               IsVisible="{Binding HasError}"
                               Text="{Binding ErrorMessage}"/>

                        <!-- Primary Sign In Button -->
                        <Button Text="Sign In"
                                Command="{Binding SignInCommand}"
                                HeightRequest="44"
                                CornerRadius="22"
                                BackgroundColor="#FFB74D"
                                TextColor="White"
                                FontAttributes="Bold"/>

                        <!-- Or separator -->
                        <Grid ColumnDefinitions="*,Auto,*"
                              Margin="0,6,0,0">
                            <BoxView HeightRequest="1"
                                     Color="#E0E0E0"
                                     VerticalOptions="Center"/>
                            <Label Grid.Column="1"
                                   Text="or"
                                   FontSize="12"
                                   TextColor="#8A8A8A"
                                   Margin="8,0"/>
                            <BoxView Grid.Column="2"
                                     HeightRequest="1"
                                     Color="#E0E0E0"
                                     VerticalOptions="Center"/>
                        </Grid>

                        <!-- Google Sign In Button (placeholder) -->
                        <Border BackgroundColor="#FFFFFF"
                                Stroke="#E0E0E0"
                                StrokeShape="RoundRectangle 24"
                                HeightRequest="44">
                            <Grid Padding="16,0"
                                  ColumnDefinitions="Auto,*">
                                <!-- Icon placeholder circle (simple rounded box instead of Circle shape) -->
                                <Border WidthRequest="24"
                                        HeightRequest="24"
                                        Stroke="#E0E0E0"
                                        BackgroundColor="Transparent"
                                        StrokeShape="RoundRectangle 12"/>
                                <Button Grid.Column="1"
                                        Text="Sign in with Google"
                                        BackgroundColor="Transparent"
                                        TextColor="#5F6368"
                                        FontSize="13"
                                        Clicked="OnGoogleSignInClicked"/>
                            </Grid>
                        </Border>

                        <!-- Bottom Sign Up link -->
                        <HorizontalStackLayout HorizontalOptions="Center"
                                               Margin="0,8,0,0">
                            <Label Text="Don't have an account? "
                                   FontSize="12"
                                   TextColor="#8A8A8A"/>
                            <Label Text="Sign Up"
                                   FontSize="12"
                                   TextColor="#50A65D"
                                   TextDecorations="Underline">
                                <Label.GestureRecognizers>
                                    <TapGestureRecognizer Command="{Binding NavigateSignUpCommand}"/>
                                </Label.GestureRecognizers>
                            </Label>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</ContentPage>