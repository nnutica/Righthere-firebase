<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Pages.SignInView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SignInView"
    Shell.NavBarIsVisible="False"
    BackgroundImageSource="start_bg.png">

    <Grid Padding="0">
        <!-- Woman reading illustration -->
        <Image Source="womanread.png"
               WidthRequest="400"
               HeightRequest="350"
               Aspect="Center"
               HorizontalOptions="Center"
               VerticalOptions="Start"
               TranslationY="-60"
               Margin="0,100,0,0"/>

        <!-- Mini logo top right with white border -->
        <Border BackgroundColor="White"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 12"
                WidthRequest="60"
                HeightRequest="60"
                HorizontalOptions="End"
                VerticalOptions="Start"
                Margin="0,-10,20,0"
                TranslationX="32"
                Padding="5">
            <Border.Shadow>
                <Shadow Opacity="0.15"
                        Radius="8"
                        Offset="0,2"/>
            </Border.Shadow>
            <Image Source="mini_logo.png"
                   Aspect="AspectFit"/>
        </Border>

        <!-- Bottom card overlapping the woman image -->
        <Border BackgroundColor="White"
                StrokeThickness="0"
                StrokeShape="RoundRectangle 40,40,0,0"
                HorizontalOptions="Fill"
                VerticalOptions="EndAndExpand"
                HeightRequest="400">
            <Border.Shadow>
                <Shadow Opacity="0.15"
                        Radius="20"
                        Offset="0,-4"/>
            </Border.Shadow>
            <Grid>
                <VerticalStackLayout Padding="20,20,20,12"
                                     Spacing="12">
                    <!-- Title -->
                    <Label Text="Sign In"
                           FontAttributes="Bold"
                           FontSize="22"
                           TextColor="#8FB78F"/>

                    <!-- Username -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Username"
                               FontSize="12"
                               FontFamily="AppFont"
                               TextColor="#8FB78F"/>
                        <Border BackgroundColor="#F8F8F8"
                                Stroke="#E0E0E0"
                                StrokeShape="RoundRectangle 12"
                                HeightRequest="44">
                            <Entry Placeholder="Enter your username"
                                   Text="{Binding Email}"
                                   FontSize="13"
                                   TextColor="#333333"
                                   BackgroundColor="Transparent"
                                   Margin="12,0"/>
                        </Border>
                    </VerticalStackLayout>

                    <!-- Password -->
                    <VerticalStackLayout Spacing="4">
                        <Label Text="Password"
                               FontSize="12"
                               TextColor="#8FB78F"/>
                        <Border BackgroundColor="#F8F8F8"
                                Stroke="#E0E0E0"
                                StrokeShape="RoundRectangle 12"
                                HeightRequest="44">
                            <Grid ColumnDefinitions="*,Auto">
                                <Entry Grid.Column="0"
                                       Placeholder="Enter your password"
                                       IsPassword="{Binding IsPasswordVisible, Converter={StaticResource InvertedBoolConverter}}"
                                       Text="{Binding Password}"
                                       FontSize="13"
                                       TextColor="#333333"
                                       BackgroundColor="Transparent"
                                       Margin="12,0,0,0"/>
                                <Image Grid.Column="1"
                                       Source="eye_icon.png"
                                       WidthRequest="20"
                                       HeightRequest="20"
                                       Margin="0,0,12,0"
                                       VerticalOptions="Center">
                                    <Image.GestureRecognizers>
                                        <TapGestureRecognizer Command="{Binding TogglePasswordVisibilityCommand}"/>
                                    </Image.GestureRecognizers>
                                </Image>
                            </Grid>
                        </Border>

                    </VerticalStackLayout>

                    <!-- Error Message -->
                    <Label FontSize="11"
                           TextColor="Red"
                           IsVisible="{Binding HasError}"
                           Text="{Binding ErrorMessage}"/>

                    <!-- Primary Sign In Button -->
                    <Button Text="Sign In"
                            Command="{Binding SignInCommand}"
                            HeightRequest="44"
                            CornerRadius="22"
                            BackgroundColor="#FFB74D"
                            TextColor="White"
                            FontAttributes="Bold"/>

                    <!-- Or separator -->
                    <Grid ColumnDefinitions="*,Auto,*"
                          Margin="0,6,0,0">
                        <BoxView HeightRequest="1"
                                 Color="#E0E0E0"
                                 VerticalOptions="Center"/>
                        <Label Grid.Column="1"
                               Text="or"
                               FontSize="12"
                               TextColor="#8A8A8A"
                               Margin="8,0"/>
                        <BoxView Grid.Column="2"
                                 HeightRequest="1"
                                 Color="#E0E0E0"
                                 VerticalOptions="Center"/>
                    </Grid>

                    <!-- Google Sign In Button (placeholder) -->
                    <Border BackgroundColor="#FFFFFF"
                            Stroke="#E0E0E0"
                            StrokeShape="RoundRectangle 24"
                            HeightRequest="44">
                        <Grid Padding="16,0"
                              ColumnDefinitions="Auto,*">
                            <!-- Google Icon -->
                            <Image Source="google.png"
                                   WidthRequest="24"
                                   HeightRequest="24"
                                   Aspect="AspectFit"
                                   VerticalOptions="Center"
                                   Margin="0,0,12,0"/>
                            <Button Grid.Column="1"
                                    Text="Sign in with Google"
                                    BackgroundColor="Transparent"
                                    TextColor="#5F6368"
                                    FontSize="13"
                                    Clicked="OnGoogleSignInClicked"/>
                        </Grid>
                    </Border>

                    <!-- Bottom Sign Up link -->
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Margin="0,8,0,0">
                        <Label Text="Don't have an account? "
                               FontSize="12"
                               TextColor="#8A8A8A"/>
                        <Label Text="Sign Up"
                               FontSize="12"
                               TextColor="#FFB74D"
                               TextDecorations="Underline">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding NavigateSignUpCommand}"/>
                            </Label.GestureRecognizers>
                        </Label>
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Grid>
        </Border>
    </Grid>
</ContentPage>