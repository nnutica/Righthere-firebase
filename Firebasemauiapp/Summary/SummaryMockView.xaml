<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Mainpages.SummaryMockView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:sys="clr-namespace:System;assembly=System.Runtime"
    Title="Summary Mock"
    Shell.NavBarIsVisible="False">
    <ScrollView>
        <Grid Padding="24"
              RowSpacing="22"
              RowDefinitions="Auto,Auto">

            <!-- Header -->
            <VerticalStackLayout Grid.Row="0"
                    Spacing="10">
                <Image Source="logo.png"
                       HeightRequest="56"
                       WidthRequest="56"/>

                <Label Text="Welcome Home,&#10;[Name]."
                       FontSize="34"
                       FontAttributes="Bold"
                       TextColor="#8FAF8B"
                       LineHeight="1.05"/>

                <Label Text="Your safe space is ready."
                       FontSize="14"
                       TextColor="#A9BEA6"/>
            </VerticalStackLayout>

            <!-- Buttons (image-only) -->
            <Grid Grid.Row="1"
                  ColumnSpacing="16"
                  RowSpacing="16"
                  ColumnDefinitions="*,*"
                  RowDefinitions="Auto,Auto,Auto">

                <!-- Emotional Diary (full width) -->
                <ImageButton Grid.Row="0"
                             Grid.ColumnSpan="2"
                             Source="btn_emotional_diary.png"
                             Aspect="AspectFill"
                             CornerRadius="20"
                             HeightRequest="150"
                             Padding="0"
                             BackgroundColor="Transparent"/>

                <!-- Quests (left) -->
                <ImageButton Grid.Row="1"
                             Grid.Column="0"
                             Source="btn_quests.png"
                             Aspect="AspectFill"
                             CornerRadius="20"
                             HeightRequest="150"
                             Padding="0"
                             BackgroundColor="Transparent"/>

                <!-- Mind Dashboard (right, tall 2 rows) -->
                <ImageButton Grid.Row="1"
                             Grid.Column="1"
                             Grid.RowSpan="2"
                             Source="btn_dashboard.png"
                             Aspect="AspectFill"
                             CornerRadius="20"
                             HeightRequest="320"
                             Padding="0"
                             BackgroundColor="Transparent"/>

                <!-- Kindness Forest (left bottom) -->
                <ImageButton Grid.Row="2"
                             Grid.Column="0"
                             Source="btn_kindness.png"
                             Aspect="AspectFill"
                             CornerRadius="20"
                             HeightRequest="150"
                             Padding="0"
                             BackgroundColor="Transparent"/>

                <!-- Optional spacer if you want exact visual balance -->
                <!-- <BoxView Grid.Row="2" Grid.Column="1" Opacity="0" HeightRequest="1"/> -->

                <!-- Store (if you want it instead of spacer, place it at Grid.Row="2" Grid.Column="1" and remove spacer) -->
                <ImageButton Grid.Row="2"
                             Grid.Column="1"
                             Source="btn_store.png"
                             Aspect="AspectFill"
                             CornerRadius="20"
                             HeightRequest="150"
                             Padding="0"
                             BackgroundColor="Transparent"/>

            </Grid>

        </Grid>
    </ScrollView>


</ContentPage>
