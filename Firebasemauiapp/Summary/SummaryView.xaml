<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Mainpages.SummaryView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="SummaryView"
    Shell.NavBarIsVisible="False"
    BackgroundColor="#FEAA3A"
    >

    <!-- Layered root: background image (transparent PNG) over orange, then content -->
    <Grid RowDefinitions="Auto,*,Auto">
         <Image Source="summarybg.png"
             Grid.RowSpan="3"
             Aspect="AspectFill"
             InputTransparent="True"/>
     
        <!-- Row 0: Key Themes title visible only on page 0 -->
    <VerticalStackLayout Grid.Row="0"
                         Spacing="-6"
                         Margin="40,30,0,10"
                         VerticalOptions="Start">
        <VerticalStackLayout.Triggers>
            <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding PageIndex}" Value="0">
                <Setter Property="IsVisible" Value="True"/>
            </DataTrigger>
            <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding PageIndex}" Value="1">
                <Setter Property="IsVisible" Value="False"/>
            </DataTrigger>
            <DataTrigger TargetType="VerticalStackLayout" Binding="{Binding PageIndex}" Value="2">
                <Setter Property="IsVisible" Value="False"/>
            </DataTrigger>
        </VerticalStackLayout.Triggers>
        <Label Text="Key"
               FontFamily="AppFont"
               FontSize="44"
               FontAttributes="Bold"
               TextColor="White"/>
        <Label Text="Themes"
               FontFamily="AppFont"
               FontSize="44"
               FontAttributes="Bold"
               TextColor="White"/>
    </VerticalStackLayout>

        <!-- Row 1: Content area switches by page index -->
        <!-- Page 1: Key Themes cards (visible when PageIndex==0) -->
        <Grid Grid.Row="1" x:Name="KeyThemesArea" IsVisible="False">
            <Grid.Triggers>
                <DataTrigger TargetType="Grid" Binding="{Binding PageIndex}" Value="0">
                    <Setter Property="IsVisible" Value="True"/>
                </DataTrigger>
            </Grid.Triggers>

            <!-- Centered container that mimics the mock layout -->
        <Grid VerticalOptions="Center"
              HorizontalOptions="Center"
             Margin="0,70,0,10">

                <Grid x:Name="CardArea"
                      WidthRequest="600"
                      HeightRequest="650"
                      VerticalOptions="Center"
                      HorizontalOptions="Center">

                    <AbsoluteLayout x:Name="CardContainer"
                                    VerticalOptions="Fill"
                                    HorizontalOptions="Fill"
                                    BindableLayout.ItemsSource="{Binding KeywordCards}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Border 
                                    AbsoluteLayout.LayoutBounds="{Binding Bounds}"
                                    AbsoluteLayout.LayoutFlags="PositionProportional"
                                    BackgroundColor="{Binding Color}"
                                    Padding="12">
                                    <Border.StrokeShape>
                                        <RoundRectangle CornerRadius="20"/>
                                    </Border.StrokeShape>
                                    <Label Text="{Binding Text}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="#0E6B5D"/>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </AbsoluteLayout>
                </Grid>
            </Grid>
        </Grid>

        <!-- Page 2: Reflection + Score, placed in Row 1 when PageIndex==1 -->
        <Grid Grid.Row="1" x:Name="ReflectionPage" IsVisible="False">
            <Grid.Triggers>
                <DataTrigger TargetType="Grid" Binding="{Binding PageIndex}" Value="1">
                    <Setter Property="IsVisible" Value="True"/>
                </DataTrigger>
            </Grid.Triggers>
            <VerticalStackLayout Spacing="14">
                <Label Text="What You Shared Today"
                        FontFamily="AppFont"
                        FontSize="28"
                        TextColor="White"/>
                <Border BackgroundColor="#F8FAED"
                        StrokeThickness="1"
                        Stroke="#50A65D"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="18"/>
                    </Border.StrokeShape>
                    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
                            ColumnDefinitions="Auto,*">
                        <Image Grid.RowSpan="2"
                                Source="{Binding EmotionImage}"
                                WidthRequest="64"
                                HeightRequest="64"
                                Margin="0,0,12,0"/>
                        <Label Grid.Column="1"
                                Text="Wellness Score"
                                TextColor="#6b7a6a"/>
                        <HorizontalStackLayout Grid.Row="1"
                                Grid.Column="1"
                                Spacing="4"
                                VerticalOptions="Center">
                            <Label Text="{Binding Score}"
                                    TextColor="#50A65D"
                                    FontSize="28"
                                    FontAttributes="Bold"/>
                            <Label Text="/10"
                                    TextColor="#50A65D"
                                    FontSize="18"
                                    VerticalOptions="End"/>
                        </HorizontalStackLayout>
                        <Label Grid.Row="2"
                                Grid.ColumnSpan="2"
                                Text="Reflection Summary"
                                TextColor="#FEAA3A"
                                FontAttributes="Bold"/>
                        <Label Grid.Row="3"
                                Grid.ColumnSpan="2"
                                Text="{Binding Content}"
                                TextColor="#333"/>
                    </Grid>
                </Border>
            </VerticalStackLayout>
        </Grid>

        <!-- Page 3: Suggestion, placed in Row 1 when PageIndex==2 -->
        <Grid Grid.Row="1" x:Name="SuggestionPage" IsVisible="False">
            <Grid.Triggers>
                <DataTrigger TargetType="Grid" Binding="{Binding PageIndex}" Value="2">
                    <Setter Property="IsVisible" Value="True"/>
                </DataTrigger>
            </Grid.Triggers>
            <VerticalStackLayout Spacing="14">
                <Label Text="What You Shared Today"
                        FontFamily="AppFont"
                        FontSize="28"
                        TextColor="White"/>
                <Border BackgroundColor="#F8FAED"
                        StrokeThickness="1"
                        Stroke="#50A65D"
                        Padding="16">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="18"/>
                    </Border.StrokeShape>
                    <VerticalStackLayout>
                        <Label Text="A Little Encouragement"
                                TextColor="#FEAA3A"
                                FontAttributes="Bold"/>
                        <Label Text="{Binding Suggestion}"
                                TextColor="#333"/>
                    </VerticalStackLayout>
                </Border>
        
        </VerticalStackLayout>
        </Grid>

        <!-- Row 2: Bottom controls fixed at bottom -->
          <Grid Grid.Row="2"
              ColumnDefinitions="Auto,*,Auto"
              Padding="20"
              Margin="0,0,0,12"
              VerticalOptions="End">
            <Button Grid.Column="0"
                    Text="â—€"
                    BackgroundColor="White"
                    TextColor="#FEAA3A"
                    CornerRadius="16"
                    WidthRequest="40"
                    HeightRequest="40"
                    IsVisible="{Binding IsFirstPage, Converter={StaticResource InvertedBoolConverter}}"
                    Command="{Binding PrevPageCommand}">
                <Button.Shadow>
                    <Shadow Brush="#40000000"
                            Radius="12"
                            Offset="0,4"
                            Opacity="0.35"/>
                </Button.Shadow>
            </Button>

            <Button Grid.Column="2"
                    Text="{Binding NextButtonText}"
                    BackgroundColor="White"
                    TextColor="#FEAA3A"
                    CornerRadius="28"
                    HeightRequest="56"
                    Padding="24,0"
                    Command="{Binding NextPageCommand}">
                <Button.Shadow>
                    <Shadow Brush="#40000000"
                            Radius="16"
                            Offset="0,4"
                            Opacity="0.35"/>
                </Button.Shadow>
            </Button>
        </Grid>
        </Grid>
    </ContentPage>