<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:Firebasemauiapp.Converters"
             x:Class="Firebasemauiapp.Mainpages.DiaryHistory"
             Title="My Memory"
             Shell.NavBarIsVisible="False"
             BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#4F5259}">

    <ContentPage.Resources>
        <converters:SeeMoreLinesConverter x:Key="SeeMoreLinesConverter"/>
        <converters:SeeMoreTextConverter x:Key="SeeMoreTextConverter"/>
    </ContentPage.Resources>

    <Grid RowDefinitions="Auto,Auto,*"
          Padding="0,40,0,0">

        <!-- Row 0: Header with Back button and Title -->
        <Grid Grid.Row="0"
              ColumnDefinitions="Auto,*"
              Margin="16,0,16,20">
            <Grid Grid.Column="0"
                  WidthRequest="24"
                  HeightRequest="24"
                  Padding="12">
                <ImageButton Source="back_darkgreen.png"
                             WidthRequest="20"
                             HeightRequest="20"
                             BackgroundColor="Transparent"
                             Clicked="OnBackClicked"/>
            </Grid>
            <Label Grid.Column="1"
                   Text="My Memory"
                   FontSize="28"
                   FontAttributes="Bold"
                   TextColor="#8FBC8F"
                   VerticalOptions="Center"
                   Margin="16,0,0,0"/>
        </Grid>

        <!-- Row 1: Everything in one big white border -->
        <ScrollView Grid.Row="1"
                    Grid.RowSpan="2">
            <Border BackgroundColor="White"
                    StrokeThickness="0"
                    Padding="16"
                    Margin="0,10,0,0">
                <Border.StrokeShape>
                    <RoundRectangle CornerRadius="24,24,0,0"/>
                </Border.StrokeShape>
                <Border.Shadow>
                    <Shadow Brush="#40000000"
                            Radius="8"
                            Offset="0,2"
                            Opacity="0.15"/>
                </Border.Shadow>
                <VerticalStackLayout Spacing="16">
                    <!-- Month/Year Dropdown -->
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="8">
                        <Label Text="{Binding MonthYearDisplay}"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#8FBC8F"
                               VerticalOptions="Center"/>
                        <Label Text="▼"
                               FontSize="12"
                               TextColor="#8FBC8F"
                               VerticalOptions="Center"/>
                        <HorizontalStackLayout.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding ShowMonthPickerCommand}"/>
                        </HorizontalStackLayout.GestureRecognizers>
                    </HorizontalStackLayout>

                    <!-- Calendar Days with Arrow Navigation -->
                    <Grid ColumnDefinitions="Auto,*,Auto"
                          HeightRequest="90">
                        <!-- Left Arrow -->
                        <Button Grid.Column="0"
                                Text="&lt;"
                                FontSize="18"
                                TextColor="#999"
                                BackgroundColor="Transparent"
                                WidthRequest="20"
                                VerticalOptions="Center"
                                Command="{Binding PreviousWeekCommand}"/>

                        <!-- Calendar Days -->
                        <CollectionView Grid.Column="1"
                                        ItemsSource="{Binding CalendarDays}"
                                        SelectionMode="None">
                            <CollectionView.ItemsLayout>
                                <LinearItemsLayout Orientation="Horizontal"
                                                   ItemSpacing="3"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <Border StrokeThickness="0"
                                            WidthRequest="43"
                                            HeightRequest="85"
                                            Padding="0">
                                        <Border.StrokeShape>
                                            <RoundRectangle CornerRadius="26"/>
                                        </Border.StrokeShape>
                                        <Border.BackgroundColor>
                                            <MultiBinding Converter="{StaticResource CalendarDayColorConverter}">
                                                <Binding Path="IsSelected"/>
                                                <Binding Path="Date"/>
                                            </MultiBinding>
                                        </Border.BackgroundColor>
                                        <Border.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.SelectDateCommand}"
                                                                  CommandParameter="{Binding .}"/>
                                        </Border.GestureRecognizers>
                                        <VerticalStackLayout Spacing="4"
                                                             HorizontalOptions="Center"
                                                             VerticalOptions="Center">
                                            <Label Text="{Binding Day}"
                                                   FontSize="26"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter=White|#666}"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding DayOfWeek}"
                                                   FontSize="11"
                                                   TextColor="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}, ConverterParameter=White|#999}"
                                                   HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                    </Border>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Right Arrow -->
                        <Button Grid.Column="2"
                                Text="&gt;"
                                FontSize="18"
                                TextColor="#999"
                                BackgroundColor="Transparent"
                                WidthRequest="20"
                                VerticalOptions="Center"
                                Command="{Binding NextWeekCommand}"/>
                    </Grid>

                    <VerticalStackLayout Spacing="16">
                        <!-- Section Title -->
                        <Label Text="Echoes from this day"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#2C2C2C"
                               Margin="0,0,0,8"/>

                        <!-- Loading Indicator -->
                        <ActivityIndicator IsVisible="{Binding IsLoading}"
                                           IsRunning="{Binding IsLoading}"
                                           Color="#FFA726"
                                           VerticalOptions="Center"
                                           HorizontalOptions="Center"
                                           Margin="0,40,0,0"/>

                        <!-- Empty State -->
                        <VerticalStackLayout IsVisible="{Binding IsEmpty}"
                                             Spacing="12"
                                             HorizontalOptions="Center"
                                             Margin="0,40,0,0">
                            <Image Source="empty.png"
                                   HeightRequest="80"
                                   WidthRequest="80"/>
                            <Label Text="No memories for this day"
                                   FontSize="16"
                                   HorizontalOptions="Center"
                                   TextColor="#999"/>
                        </VerticalStackLayout>

                        <!-- Diary Cards -->
                        <CollectionView ItemsSource="{Binding DiariesForSelectedDate}"
                                        SelectionMode="None"
                                        IsVisible="{Binding IsEmpty, Converter={StaticResource InvertedBoolConverter}}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <VerticalStackLayout Margin="0,0,0,16"
                                                         Padding="0">
                                        <Grid ColumnDefinitions="Auto,*"
                                              ColumnSpacing="12">
                                            <!-- Left Column: Large Mood Icon -->
                                            <Image Grid.Column="0"
                                                   Source="{Binding MoodImage}"
                                                   HeightRequest="120"
                                                   WidthRequest="120"
                                                   VerticalOptions="Start"
                                                   Margin="0,0,20,0"/>

                                            <!-- Right Column: Content -->
                                            <VerticalStackLayout Grid.Column="1"
                                                                 Spacing="10">
                                                <!-- Date/Time -->
                                                <Label Text="{Binding FormattedDateTime}"
                                                       FontSize="16"
                                                       TextColor="#8FBC8F"
                                                       FontAttributes="Bold"/>

                                                <!-- Keywords/Tags -->
                                                <FlexLayout BindableLayout.ItemsSource="{Binding KeywordsList}"
                                                            Wrap="Wrap"
                                                            JustifyContent="Start"
                                                            AlignItems="Start">
                                                    <BindableLayout.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BackgroundColor="#ACE889"
                                                                    StrokeThickness="0"
                                                                    StrokeShape="RoundRectangle 14"
                                                                    Padding="12,6"
                                                                    Margin="0,0,6,6">
                                                                <Label Text="{Binding .}"
                                                                       FontSize="14"
                                                                       TextColor="White"
                                                                       FontAttributes="Bold"/>
                                                            </Border>
                                                        </DataTemplate>
                                                    </BindableLayout.ItemTemplate>
                                                </FlexLayout>

                                                <!-- Wellness Score with Arrow -->
                                                <Grid ColumnDefinitions="*,Auto"
                                                      Margin="0,4,0,0">
                                                    <Label Grid.Column="0"
                                                           Text="{Binding SentimentScore, StringFormat='Wellness Pulse : {0}'}"
                                                           FontSize="16"
                                                           TextColor="#8FBC8F"
                                                           FontAttributes="Bold"
                                                           VerticalOptions="Center"/>
                                                    <Border Grid.Column="1"
                                                            BackgroundColor="#FFD89C"
                                                            StrokeThickness="0"
                                                            StrokeShape="RoundRectangle 20"
                                                            WidthRequest="40"
                                                            HeightRequest="40"
                                                            Padding="0">
                                                        <Border.GestureRecognizers>
                                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type ContentPage}}, Path=BindingContext.ViewDiaryCommand}"
                                                                                  CommandParameter="{Binding .}"/>
                                                        </Border.GestureRecognizers>
                                                        <Label Text="→"
                                                               FontSize="20"
                                                               TextColor="White"
                                                               FontAttributes="Bold"
                                                               HorizontalOptions="Center"
                                                               VerticalOptions="Center"/>
                                                    </Border>
                                                </Grid>
                                            </VerticalStackLayout>
                                        </Grid>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
        </ScrollView>
    </Grid>
</ContentPage>