<?xml version="1.0" encoding="utf-8"?>
<ContentPage
    x:Class="Firebasemauiapp.Mainpages.StarterView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Name="Root"
    Title="StarterView"
    BackgroundImageSource="start_bg.png"
    Shell.FlyoutBehavior="Disabled"
    Shell.NavBarIsVisible="False"
    Shell.BackgroundColor="Transparent">

    <Shell.BackButtonBehavior>
        <BackButtonBehavior IsVisible="False"
                            IsEnabled="False"/>
    </Shell.BackButtonBehavior>

    <Grid>
        <!-- Main Content -->
        <ScrollView>
            <VerticalStackLayout Padding="20"
                                 Spacing="20"
                                 VerticalOptions="Center"
                                 HorizontalOptions="Center">
                <!-- Logo -->
                <Image Source="logo.png"
                       WidthRequest="200"
                       HeightRequest="200"
                       HorizontalOptions="Center"
                       Margin="0,40,0,20"/>

                <!-- Diary Button (Full Width) -->
                <Border BackgroundColor="White"
                        HeightRequest="60"
                        WidthRequest="320"
                        Padding="20,0"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoDiaryCommand}"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="12"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                        <Image Source="diary.png"
                               WidthRequest="40"
                               HeightRequest="40"/>
                        <Label Text="Diary"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#6B8E6B"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Forest Button (Full Width) -->
                <Border BackgroundColor="White"
                        HeightRequest="60"
                        WidthRequest="320"
                        Padding="20,0"
                        StrokeThickness="0">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="16"/>
                    </Border.StrokeShape>
                    <Border.GestureRecognizers>
                        <TapGestureRecognizer Command="{Binding GoForestCommand}"/>
                    </Border.GestureRecognizers>
                    <HorizontalStackLayout Spacing="12"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center">
                        <Image Source="forest.png"
                               WidthRequest="40"
                               HeightRequest="40"/>
                        <Label Text="Forest"
                               FontSize="18"
                               FontAttributes="Bold"
                               TextColor="#6B8E6B"
                               VerticalOptions="Center"/>
                    </HorizontalStackLayout>
                </Border>

                <!-- Row 3: Quest and Store -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      WidthRequest="320">
                    <!-- Quest Button -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            HeightRequest="60"
                            Padding="10,0"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoQuestCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="8"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <Image Source="quest.png"
                                   WidthRequest="32"
                                   HeightRequest="32"/>
                            <Label Text="Quest"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#6B8E6B"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Store Button -->
                    <Border Grid.Column="1"
                            BackgroundColor="White"
                            HeightRequest="60"
                            Padding="10,0"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoStoreCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="8"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <Image Source="store.png"
                                   WidthRequest="32"
                                   HeightRequest="32"/>
                            <Label Text="Store"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="#6B8E6B"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </Grid>

                <!-- Row 4: Dashboard and Sign Out -->
                <Grid ColumnDefinitions="*,*"
                      ColumnSpacing="12"
                      WidthRequest="320">
                    <!-- Dashboard Button -->
                    <Border Grid.Column="0"
                            BackgroundColor="White"
                            HeightRequest="60"
                            Padding="10,0"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding GoDashboardCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="8"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <Image Source="dashboard.png"
                                   WidthRequest="32"
                                   HeightRequest="32"/>
                            <Label Text="Dashboard"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="#6B8E6B"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>

                    <!-- Sign Out Button -->
                    <Border Grid.Column="1"
                            BackgroundColor="#FF9F4A"
                            HeightRequest="60"
                            Padding="10,0"
                            StrokeThickness="0">
                        <Border.StrokeShape>
                            <RoundRectangle CornerRadius="16"/>
                        </Border.StrokeShape>
                        <Border.GestureRecognizers>
                            <TapGestureRecognizer Command="{Binding LogOutCommand}"/>
                        </Border.GestureRecognizers>
                        <HorizontalStackLayout Spacing="8"
                                               HorizontalOptions="Center"
                                               VerticalOptions="Center">
                            <Image Source="logout.png"
                                   WidthRequest="32"
                                   HeightRequest="32"/>
                            <Label Text="Sign Out"
                                   FontSize="15"
                                   FontAttributes="Bold"
                                   TextColor="White"
                                   VerticalOptions="Center"/>
                        </HorizontalStackLayout>
                    </Border>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
