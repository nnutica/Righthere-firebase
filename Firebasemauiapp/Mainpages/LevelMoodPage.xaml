<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Firebasemauiapp.Controls"
             x:Class="Firebasemauiapp.Mainpages.LevelMoodPage"
             Title="Level of Mood">
    <Grid RowDefinitions="*,32">
        <!-- Orange card-like area -->
        <Grid Grid.Row="0"
              Padding="20,24"
              RowDefinitions="Auto,*,Auto"
              BackgroundColor="#F8A33A">
            <!-- Back arrow could be added later -->
            <VerticalStackLayout>
                <Label FontFamily="AppFont"
                       FontSize="28"
                       TextColor="White">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Hey "/>
                            <Span Text="{Binding Username}"/>
                            <Span Text=","/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <Label Text="how do you feeling today?"
                       FontFamily="AppFont"
                       FontSize="28"
                       TextColor="White"/>
            </VerticalStackLayout>

            <VerticalStackLayout Grid.Row="1"
                                 Spacing="20"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Label Text="{Binding Mood.Emoji}"
                       FontSize="96"
                       HorizontalOptions="Center"/>
                <Label FontSize="20"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="I'm Feeling "/>
                            <Span Text="{Binding Mood.Name}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <!-- Semicircle mood arc slider -->
                <controls:MoodArcSlider WidthRequest="340"
                                        HeightRequest="180"
                                        Value="{Binding Score}"/>
                <Label Text="{Binding Score, StringFormat='Score: {0}/10'}"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Button Grid.Row="2"
                    Text="Set Mood"
                    BackgroundColor="Black"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="48"
                    Command="{Binding SetMoodCommand}"/>
        </Grid>

        <!-- Bottom rounded strip behind TabBar -->
        <Border Grid.Row="1"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationY="8">
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.18"
                        Radius="14"
                        Offset="0,-2"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28,28,0,0"/>
            </Border.StrokeShape>
        </Border>
    </Grid>
</ContentPage>