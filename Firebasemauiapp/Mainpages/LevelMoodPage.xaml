<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:Firebasemauiapp.Controls"
             x:Class="Firebasemauiapp.Mainpages.LevelMoodPage"
             Title="Level of Mood">
    <Grid RowDefinitions="*,32">
        <!-- Orange card-like area -->
        <Grid Grid.Row="0"
              Padding="20,24"
              RowDefinitions="Auto,*,Auto"
              BackgroundColor="#F8A33A">
            <!-- Back arrow could be added later -->
            <VerticalStackLayout Spacing="0">
                <Label FontFamily="AppFont"
                       FontSize="44"
                       TextColor="#2F6535"
                       LineHeight="1.0">
                    <Label.Resources>
                        <Style TargetType="Span">
                            <Setter Property="FontFamily"
                                    Value="AppFont"/>
                            <Setter Property="FontSize"
                                    Value="44"/>
                            <Setter Property="TextColor"
                                    Value="White"/>
                        </Style>
                    </Label.Resources>
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Hey "/>
                            <Span Text="{Binding Username}"/>
                            <Span Text=","/>
                            <Span Text="&#10;"/>
                            <Span Text="how do you &#10;feeling today?"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
            </VerticalStackLayout>
            <VerticalStackLayout Grid.Row="1"
                                 Spacing="20"
                                 HorizontalOptions="Center"
                                 VerticalOptions="Center">
                <Image Source="{Binding Mood.Icon}"
                       HeightRequest="200"
                       WidthRequest="200"
                       Aspect="AspectFit"
                       HorizontalOptions="Center"/>
                <Label FontSize="24"
                       TextColor="White"
                       FontAttributes="Bold"
                       HorizontalOptions="Center">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="I'm Feeling "
                                  TextColor="White"
                                  FontFamily="contextfont"
                                  FontSize="24"/>
                            <Span Text="{Binding Mood.Name}"
                                  TextColor="White"
                                  FontFamily="contextfont"
                                  FontSize="24"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <!-- Semicircle mood arc slider -->
                <controls:MoodArcSlider WidthRequest="340"
                                        HeightRequest="180"
                                        Value="{Binding Score}"/>
                <Label Text="{Binding Score, StringFormat='Score: {0}/10'}"
                       FontSize="16"
                       TextColor="White"
                       HorizontalOptions="Center"/>
            </VerticalStackLayout>

            <Button Grid.Row="2"
                    Text="Letâ€™s Express Your Mood!"
                    BackgroundColor="#8FB78F"
                    TextColor="White"
                    CornerRadius="12"
                    HeightRequest="48"
                    Command="{Binding SetMoodCommand}">
                <Button.Triggers>
                    <DataTrigger TargetType="Button"
                                 Binding="{Binding Score}"
                                 Value="0">
                        <Setter Property="IsEnabled"
                                Value="False"/>
                        <Setter Property="BackgroundColor"
                                Value="#D3D3D3"/>
                    </DataTrigger>
                </Button.Triggers>
            </Button>
        </Grid>

        <!-- Bottom rounded strip behind TabBar -->
        <Border Grid.Row="1"
                BackgroundColor="White"
                StrokeThickness="0"
                TranslationY="8">
            <Border.Shadow>
                <Shadow Brush="Black"
                        Opacity="0.18"
                        Radius="14"
                        Offset="0,-2"/>
            </Border.Shadow>
            <Border.StrokeShape>
                <RoundRectangle CornerRadius="28,28,0,0"/>
            </Border.StrokeShape>
        </Border>
    </Grid>
</ContentPage>