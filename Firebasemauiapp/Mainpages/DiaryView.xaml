<?xml version="1.0" encoding="utf-8" ?>
<ContentPage x:Class="Firebasemauiapp.Mainpages.DiaryView"
             xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:conv="clr-namespace:Firebasemauiapp.Converters"
             Title="DiaryView"
             BackgroundColor="#FEAA3A"
             Shell.NavBarIsVisible="False">
    <ContentPage.Resources>
        <conv:MoodNameToImageConverter x:Key="MoodNameToImageConverter"/>
    </ContentPage.Resources>
    <Grid RowDefinitions="Auto,*"
          Padding="20"
          RowSpacing="12">
        <!-- Header -->
        <Grid Grid.Row="0"
              RowDefinitions="Auto,Auto"
              ColumnDefinitions="Auto,*"
              Margin="0,0,0,12">
            <Button Text="â†"
                    Clicked="OnBackClicked"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    FontSize="22"
                    Padding="0"
                    WidthRequest="36"
                    HeightRequest="36"/>
            <Image Source="calendar.png"
                   Grid.Row="1"
                   Grid.Column="0"
                   WidthRequest="28"
                   HeightRequest="28"
                   Margin="0,4,8,0"/>
            <Label x:Name="DateLabel"
                   Grid.Column="1"
                   Grid.Row="1"
                   TextColor="White"
                   FontSize="20"
                   Opacity="0.9"
                   Margin="0,4,0,0"/>
        </Grid>
        <!-- Content -->
        <Grid Grid.Row="1"
              RowDefinitions="Auto,*,Auto,Auto"
              ColumnDefinitions="*,*,*,*,*,*,*,*,*,*,*,*"
              RowSpacing="12">
            <!-- Mood indicator -->
            <Grid Grid.Row="0"
                  Grid.ColumnSpan="12"
                  ColumnDefinitions="Auto,*"
                  Margin="0,0,0,10">
                <Border BackgroundColor="White"
                        WidthRequest="60"
                        HeightRequest="60"
                        VerticalOptions="Start">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="12"/>
                    </Border.StrokeShape>
                    <Image Source="{Binding Mood.Name, Converter={StaticResource MoodNameToImageConverter}}"
                           Margin="8"
                           Aspect="AspectFit"/>
                </Border>
            </Grid>
            <!-- Diary editor -->
            <Border Grid.Row="1"
                    Grid.ColumnSpan="12"
                    Margin="0,28,0,10"
                    StrokeThickness="0"
                    BackgroundColor="Transparent"
                    Padding="10"
                    VerticalOptions="FillAndExpand"
                    HeightRequest="280">
                <Editor x:Name="DiaryEntry"
                        BackgroundColor="Transparent"
                        Placeholder="share something good..."
                        Text="{Binding DiaryContent}"
                        FontSize="16    "
                        TextColor="White"
                        VerticalOptions="FillAndExpand"
                        VerticalTextAlignment="Start"/>
            </Border>
            <!-- Rounded image (using Frame to clip) -->
            <Frame Grid.Row="2"
                   Grid.ColumnSpan="12"
                   Padding="0"
                   Margin="0,4,0,0"
                   CornerRadius="20"
                   HasShadow="False"
                   BackgroundColor="Transparent"
                   BorderColor="Transparent">
                <Frame.Triggers>
                    <DataTrigger TargetType="Frame"
                                 Binding="{Binding ImageUrl}"
                                 Value="">
                        <Setter Property="IsVisible"
                                Value="False"/>
                    </DataTrigger>
                    <DataTrigger TargetType="Frame"
                                 Binding="{Binding ImageUrl}"
                                 Value="{x:Null}">
                        <Setter Property="IsVisible"
                                Value="False"/>
                    </DataTrigger>
                </Frame.Triggers>
                <Image Source="{Binding ImageUrl}"
                       Aspect="AspectFill"
                       HeightRequest="360"
                       HorizontalOptions="Fill"
                       VerticalOptions="Fill"/>
            </Frame>
            <!-- Action row -->
            <Grid Grid.Row="3"
                  Grid.ColumnSpan="12"
                  ColumnDefinitions="Auto,Auto,*"
                  VerticalOptions="Center">
                <ImageButton Grid.Column="0"
                             Source="imgicon.png"
                             BackgroundColor="White"
                             CornerRadius="12"
                             Padding="8"
                             WidthRequest="48"
                             HeightRequest="48"
                             Margin="0,0,10,0"
                             Command="{Binding UploadImageCommand}">
                    <ImageButton.Shadow>
                        <Shadow Brush="#40000000"
                                Radius="12"
                                Offset="0,4"
                                Opacity="0.35"/>
                    </ImageButton.Shadow>
                </ImageButton>
                <ActivityIndicator Grid.Column="1"
                                   Margin="10,0,0,0"
                                   Color="#50A65D"
                                   IsRunning="{Binding IsUploadingImage}"
                                   IsVisible="{Binding IsUploadingImage}"/>
                <Button Grid.Column="2"
                        x:Name="AnalyzeButton"
                        BackgroundColor="White"
                        TextColor="#FEAA3A"
                        Text="{Binding AnalyzeButtonText}"
                        Command="{Binding AnalyzeContentCommand}"
                        IsEnabled="{Binding IsAnalyzing, Converter={StaticResource InvertedBoolConverter}}"
                        CornerRadius="28"
                        HeightRequest="56"
                        HorizontalOptions="Fill"
                        VerticalOptions="Center"
                        FontAttributes="Bold"
                        FontSize="18">
                    <Button.Shadow>
                        <Shadow Brush="#40000000"
                                Radius="16"
                                Offset="0,4"
                                Opacity="0.35"/>
                    </Button.Shadow>
                </Button>
            </Grid>
            <ActivityIndicator Grid.Row="3"
                               Grid.ColumnSpan="12"
                               Margin="10"
                               Color="White"
                               IsRunning="{Binding IsLoadingVisible}"
                               IsVisible="{Binding IsLoadingVisible}"/>
        </Grid>
    </Grid>
</ContentPage>