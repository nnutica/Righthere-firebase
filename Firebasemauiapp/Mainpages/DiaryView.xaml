<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Firebasemauiapp.Mainpages.DiaryView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="DiaryView">
    <VerticalStackLayout Padding="20">

        <!--  Reason Selection  -->
        <Frame
            Margin="0,0,0,10"
            Padding="10"
            BackgroundColor="#F8FAED"
            CornerRadius="20"
            Opacity="30"
            HasShadow="True"
            BorderColor="#50A65D"
            WidthRequest="350">
            <ScrollView Orientation="Horizontal">
                <HorizontalStackLayout Spacing="10">
                    <Label
                        FontAttributes="Bold"
                        Text="Reason :"
                        VerticalOptions="Center"/>

                    <Button
                        x:Name="FriendButton"
                        Padding="5,2"
                        BackgroundColor="{Binding FriendButtonBackground}"
                        Command="{Binding SelectReasonCommand}"
                        CommandParameter="friend"
                        CornerRadius="10"
                        Text="friend"
                        TextColor="{Binding FriendButtonText}"
                        WidthRequest="60"/>

                    <Button
                        x:Name="WorkButton"
                        Padding="5,2"
                        BackgroundColor="{Binding WorkButtonBackground}"
                        Command="{Binding SelectReasonCommand}"
                        CommandParameter="work"
                        CornerRadius="10"
                        Text="work"
                        TextColor="{Binding WorkButtonText}"
                        WidthRequest="60"/>

                    <Button
                        x:Name="FamilyButton"
                        Padding="5,2"
                        BackgroundColor="{Binding FamilyButtonBackground}"
                        Command="{Binding SelectReasonCommand}"
                        CommandParameter="family"
                        CornerRadius="10"
                        Text="family"
                        TextColor="{Binding FamilyButtonText}"
                        WidthRequest="60"/>

                    <Button
                        x:Name="SchoolButton"
                        Padding="5,2"
                        BackgroundColor="{Binding SchoolButtonBackground}"
                        Command="{Binding SelectReasonCommand}"
                        CommandParameter="school"
                        CornerRadius="10"
                        Text="school"
                        TextColor="{Binding SchoolButtonText}"
                        WidthRequest="60"/>
                </HorizontalStackLayout>
            </ScrollView>
        </Frame>

        <!--  Entry Field  -->
        <Frame
            Margin="0,0,0,10"
            Padding="10"
            BackgroundColor="#F8FAED"
            CornerRadius="20"
            HasShadow="True"
            Opacity="30"
            BorderColor="#50A65D"
            WidthRequest="350">
            <Editor
                x:Name="DiaryEntry"
                BackgroundColor="#F8FAED"
                HeightRequest="300"
                Placeholder="share something good..."
                Text="{Binding DiaryContent}"
                TextColor="Black"
                VerticalOptions="Start"
                VerticalTextAlignment="Start"
                WidthRequest="330"/>
        </Frame>

        <!--  ✅ Loading Indicator  -->
        <ActivityIndicator
            x:Name="LoadingIndicator"
            Margin="10"
            Color="Blue"
            IsRunning="{Binding IsLoadingVisible}"
            IsVisible="{Binding IsLoadingVisible}"/>

        <!--  ✅ ปุ่ม Next  -->
        <Button
            x:Name="AnalyzeButton"
            Margin="0,200,0,120"
            BackgroundColor="#50A65D"
            Command="{Binding AnalyzeContentCommand}"
            FontSize="16"
            VerticalOptions="End"
            HorizontalOptions="End"
            IsEnabled="{Binding IsAnalyzing, Converter={StaticResource InvertedBoolConverter}}"
            Text="{Binding AnalyzeButtonText}"
            TextColor="White"/>
    </VerticalStackLayout>
</ContentPage>