<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Firebasemauiapp.Mainpages.SummaryView"
             Title="SummaryView"
             Shell.NavBarIsVisible="False"
             BackgroundColor="#edf6e4">
    <ScrollView>
        <VerticalStackLayout>
            <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto,Auto">
                <Grid Grid.Row="0">
                    <!--  Header Section  -->
                    <Label
                        Padding="15"
                        Background="#50A65D"
                        FontAttributes="Bold"
                        FontSize="24"
                        HeightRequest="70"
                        HorizontalOptions="Center"
                        HorizontalTextAlignment="Center"
                        Text="Summary"
                        TextColor="White"
                        VerticalOptions="Center"
                        WidthRequest="420"/>
                </Grid>

                <!--  Mood Description  -->
                <Grid Grid.Row="1">
                    <Label
                        Margin="0,10,0,20"
                        FontSize="14"
                        HeightRequest="100"
                        HorizontalTextAlignment="Center"
                        Text="{Binding Emotion}"
                        TextColor="Black"
                        WidthRequest="360"/>
                </Grid>

                <!--  Image Section  -->
                <Grid Grid.Row="2">
                    <Image
                        Aspect="AspectFill"
                        HeightRequest="150"
                        HorizontalOptions="Center"
                        Source="{Binding EmotionImage}"
                        VerticalOptions="Center"
                        WidthRequest="150"/>
                </Grid>

                <!--  Placeholder for Graphs  -->
                <Grid Grid.Row="3">
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="20">

                        <!-- Keyword -->
                        <Frame
                            Padding="15"
                            BackgroundColor="#F8FAED"
                            CornerRadius="15"
                            HasShadow="True"
                            BorderColor="#50A65D"
                            HeightRequest="120"
                            WidthRequest="150">
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="Keyword"
                                    TextColor="Black"/>
                                <Label
                                    Margin="0,10,0,0"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Keywords}"
                                    TextColor="Black"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Mood -->
                        <Frame
                            Padding="15"
                            BackgroundColor="#F8FAED"                            
                            CornerRadius="15"
                            HasShadow="True"
                            BorderColor="#50A65D"
                            HeightRequest="120"
                            WidthRequest="150">
                            <VerticalStackLayout>
                                <Label
                                    FontAttributes="Bold"
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    Text="Mood"
                                    TextColor="Black"/>
                                <Label
                                    Margin="0,10,0,0"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Mood}"
                                    TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Frame>

                    </HorizontalStackLayout>
                </Grid>

                <!--  Advice Section  -->
                <Grid Grid.Row="4"
                      ColumnDefinitions="Auto,*">
                    <Label
                        Grid.Column="0"
                        Margin="0,20,0,5"
                        Padding="10"
                        FontAttributes="Bold"
                        FontSize="14"
                        Text="Advice :"
                        TextColor="Black"/>

                    <Label
                        Grid.Column="1"
                        Margin="0,20,0,20"
                        Padding="10"
                        FontSize="14"
                        
                        HorizontalTextAlignment="Center"
                        Text="{Binding Suggestion}"
                        TextColor="Black"/>
                </Grid>

                <!--  score Section  -->
                <Grid Grid.Row="5">
                    <HorizontalStackLayout HorizontalOptions="Center"
                                           Spacing="20">
                        <Frame
                            Padding="15"
                            BackgroundColor="#F8FAED"
                            CornerRadius="15"
                            HasShadow="True"
                            BorderColor="#50A65D"
                            HeightRequest="120"
                            WidthRequest="150">
                            <VerticalStackLayout>
                                <Label
                                    FontSize="12"
                                    HorizontalTextAlignment="Center"
                                    FontAttributes="Bold"
                                    Text="Sentiment Score"
                                    TextColor="Black"/>
                                <Label
                                    Margin="0,20,0,0"
                                    FontAttributes="Bold"
                                    FontSize="16"
                                    HorizontalTextAlignment="Center"
                                    Text="{Binding Score}"
                                    TextColor="Gray"/>
                            </VerticalStackLayout>
                        </Frame>


                    </HorizontalStackLayout>
                </Grid>

                <!--  Next Button  -->
                <Grid Grid.Row="6">
                    <Button
                        Margin="0,80,20,100"
                        Padding="20"
                        BackgroundColor="#50A65D"
                        Command="{Binding SaveAndGoBackCommand}"
                        FontSize="16"
                        VerticalOptions="End"
                        HorizontalOptions="End"
                        Text="Next"
                        TextColor="White"/>
                </Grid>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>